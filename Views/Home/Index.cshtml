<style>
    .hero-section {
        background-attachment: fixed;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .card:hover .feature-icon {
        transform: scale(1.1);
    }

    .step-number {
        transition: transform 0.3s ease;
    }

    .step-number:hover {
        transform: scale(1.1);
    }
