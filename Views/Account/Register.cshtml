@using DriveHub.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Register" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IDNumber"></label>
                <input asp-for="IDNumber" class="form-control" placeholder="Enter your ID number" maxlength="13" />
                <span asp-validation-for="IDNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- NEW PHONE NUMBER FIELD -->
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., 0712345678 or +27821234567" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <small class="form-text text-muted">Enter your South African phone number (e.g., 0712345678 or +27821234567)</small>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Registration Information</h5>
            </div>
            <div class="card-body">
                <h6>Age Requirements:</h6>
                <ul>
                    <li><strong>16+ years:</strong> Can register for learners</li>
                    <li><strong>18+ years:</strong> Can register for learners and drivers</li>
                </ul>
                <h6>Phone Number Format:</h6>
                <ul>
                    <li><strong>Local:</strong> 0712345678</li>
                    <li><strong>International:</strong> +27821234567</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}