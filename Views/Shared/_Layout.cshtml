<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriveHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
    body { background-color: #ffffff; } /* Changed to white */
    .navbar { background-color: #ffffff; } /* Changed to white */
    .navbar-brand { color: #000000 !important; } /* DriveHub text to black */
</style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DriveHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- NEW: Dashboard Link for Logged-in Users -->
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                @if (User.IsInRole("Admin"))
                                {
                                            <a class="nav-link text-dark" asp-area="" asp-controller="AdminDashboard" asp-action="Index">
                                                🏠 Admin Dashboard
                                            </a>
                                }
                                else if (User.IsInRole("Instructor"))
                                {
                                            <a class="nav-link text-dark" asp-area="" asp-controller="InstructorDashboard" asp-action="Index">
                                                🏠 Instructor Dashboard
                                            </a>
                                }
                                else if (User.IsInRole("Student"))
                                {
                                            <a class="nav-link text-dark" asp-area="" asp-controller="StudentDashboard" asp-action="Index">
                                                🏠 My Dashboard
                                            </a>
                                }
                                </li>
                        }
                    </ul>
                    <!-- Keep the login partial for when user is logged in -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- THIS LINE IS CRITICAL -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DriveHub - <a href="#">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- NEW: Logout Confirmation Script -->
    <script>
        function confirmLogout() {
            return confirm('Are you sure you want to log out?');
        }

        // Attach confirmation to logout form
        document.addEventListener('DOMContentLoaded', function() {
            const logoutForm = document.querySelector('form[action*="Logout"]');
            if (logoutForm) {
                logoutForm.onsubmit = confirmLogout;
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>