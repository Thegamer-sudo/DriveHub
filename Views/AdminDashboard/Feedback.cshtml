@model List<DriveHub.Models.Feedback>

@{
    ViewData["Title"] = "Student Feedback Management";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <span class="badge bg-primary">@Model.Count Total Feedback</span>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Student Feedback</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Student</th>
                                            <th>Feedback Message</th>
                                            <th>Date</th>
                                            <th>Admin Response</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var feedback in Model)
                                    {
                                                <tr>
                                                    <td>
                                                        <strong>@feedback.User.FullName</strong><br>
                                                        <small class="text-muted">@feedback.User.Email</small>
                                                    </td>
                                                    <td>@feedback.Message</td>
                                                    <td>@feedback.SubmittedDate.ToString("dd MMM yyyy HH:mm")</td>
                                                    <td>
                                                @if (!string.IsNullOrEmpty(feedback.AdminResponse))
                                                {
                                                                <strong>Your Response:</strong>
                                                                <p class="mb-1 text-success">@feedback.AdminResponse</p>
                                                                <small class="text-muted">@feedback.ResponseDate?.ToString("dd MMM yyyy")</small>
                                                }
                                                else
                                                {
                                                                <span class="text-muted">No response yet</span>
                                                }
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary btn-sm" 
                                                                data-toggle="modal" data-target="#responseModal@(feedback.Id)">
                                                            Respond
                                                        </button>

                                                        <!-- Response Modal -->
                                                        <div class="modal fade" id="responseModal@(feedback.Id)" tabindex="-1" role="dialog">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title">Respond to @feedback.User.FullName</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                            <form asp-action="RespondToFeedback" asp-controller="AdminDashboard" method="post">
                                                                        <div class="modal-body">
                                                                            <input type="hidden" name="feedbackId" value="@feedback.Id" />

                                                                            <div class="form-group">
                                                                                <label><strong>Student's Feedback:</strong></label>
                                                                                <p class="border p-2 bg-light">@feedback.Message</p>
                                                                            </div>

                                                                            <div class="form-group">
                                                                                <label for="adminResponse@(feedback.Id)"><strong>Your Response:</strong></label>
                                                                                <textarea class="form-control" id="adminResponse@(feedback.Id)" 
                                                                                          name="adminResponse" rows="4" 
                                                                                          placeholder="Type your response to the student..." required></textarea>
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                            <button type="submit" class="btn btn-primary">Send Response</button>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <div class="alert alert-info text-center">
                                <h5>No Feedback Yet</h5>
                                <p class="mb-0">Students haven't submitted any feedback yet.</p>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Add jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Debug modal opening
    $(document).ready(function() {
        console.log("✅ jQuery loaded - modals should work now");

        $('[data-toggle="modal"]').on('click', function() {
            var target = $(this).data('target');
            console.log("🎯 Opening modal:", target);
            $(target).modal('show');
        });
    });
</script>
</div>